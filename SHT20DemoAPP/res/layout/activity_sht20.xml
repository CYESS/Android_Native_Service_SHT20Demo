<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:a="http://schemas.android.com/apk/res/android"
	a:layout_width="fill_parent" a:layout_height="fill_parent"
	a:orientation="vertical">

    <LinearLayout
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:layout_margin="10dp"
        a:background="@drawable/border"
        a:orientation="vertical"
        a:padding="10dp" >

        <LinearLayout
            a:layout_width="fill_parent"
            a:layout_height="wrap_content" >

        </LinearLayout>

        <LinearLayout
            a:layout_width="fill_parent"
            a:layout_height="wrap_content" >

            <TextView
                a:id="@+id/textTemperature"
                a:layout_width="239dp"
                a:layout_height="wrap_content"
                a:layout_weight="0.10"
                a:text="@string/Temperature" />

            <TextView
                a:id="@+id/textHumidity"
                a:layout_width="wrap_content"
                a:layout_height="wrap_content"
                a:layout_weight="0.17"
                a:text="@string/Humidity" />

        </LinearLayout>

        <LinearLayout
            a:layout_width="fill_parent"
            a:layout_height="wrap_content" >

        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        a:layout_width="fill_parent"
        a:layout_height="wrap_content"
        a:layout_margin="10dp"
        a:background="@drawable/border"
        a:orientation="vertical"
        a:padding="10dp" >
            <LinearLayout
				   a:orientation="horizontal"
				    a:layout_width="wrap_content"
				    a:layout_height="wrap_content">
		    	</LinearLayout>

		    	<ProgressBar
		    	    a:id="@+id/progressBarTemperature"
		    	    style="?android:attr/progressBarStyleHorizontal"
		    	    a:layout_width="fill_parent"
		    	    a:layout_height="match_parent"
		    	    a:layout_marginBottom="10dp"
		    	    a:layout_marginTop="10dp"
		    	    a:max="80"
		    	    a:progress="0" />


		<ProgressBar
                            a:id="@+id/progressBarHumidity"
                            style="?android:attr/progressBarStyleHorizontal"
                            a:layout_width="fill_parent"
                            a:layout_height="match_parent"
                            a:layout_marginBottom="10dp"
                            a:layout_marginTop="10dp"
                            a:max="80"
                            a:progress="0" />

    </LinearLayout>
	<LinearLayout
	    a:layout_width="200dp"
	    a:layout_height="60dp"
	    a:layout_gravity="center"
	    a:layout_margin="1dp"
	    a:orientation="vertical"
	    a:padding="10dp" >
		<ImageView
		    a:id="@+id/imageView1"
		    a:layout_width="183dp"
		    a:layout_height="48dp"
		    a:layout_centerInParent="true"
		    a:src="@drawable/cyess_logo_small" />
	</LinearLayout>
</LinearLayout>
